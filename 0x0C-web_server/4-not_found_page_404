#!/usr/bin/env bash
# Install Nginx and configure redirection
sudo apt-get update -y
sudo apt-get install nginx -y
sudo service nginx start

sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www
echo -e "Ceci n'est pas une page" | dd status=none of=/var/www/html/404.html

# Add a location block with the rewrite directive to the default Nginx configuration
sudo sed -i "/listen 80 default_server;/a  error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
    }" /etc/nginx/sites-enabled/default

sudo service nginx restart
